[Unit]
Description=Start Sonobus
After=graphical.target
Requires=qjackctl.service

[Service]
User=pi
Environment=DISPLAY=:0
Environment=XDG_RUNTIME_DIR="/run/user/1000"
ExecStart=/usr/bin/pw-jack /home/pi/microtonOS/.venv/bin/python3 /home/pi/microtonOS/src/wrappers/sonobus.py
Restart=always
RestartSec=2s
TimeoutSec=infinity

[Install]
WantedBy=graphical.target
