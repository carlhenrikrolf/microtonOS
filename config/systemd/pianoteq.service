[Unit]
Description=Start Pianoteq as a subprocess to its wrapper
After=graphical.target
Requires=qjackctl.service
Requires=mtsesp_master.service

[Service]
User=pi
Environment=DISPLAY=:0
ExecStart=/home/pi/microtonOS/.venv/bin/python3 /home/pi/microtonOS/src/wrappers/pianoteq.py
Restart=always
RestartSec=2s
TimeoutSec=infinity

[Install]
WantedBy=graphical.target
