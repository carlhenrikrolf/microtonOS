[Unit]
Description=Start Pianoteq as a subprocess to its wrapper
After=graphical.target
Requires=qjackctl.services

[Service]
User=pi
Environment=XDG_RUNTIME_DIR="/run/user/1000"
Environment=DISPLAY=:0
ExecStart=/home/pi/microtonOS/.venv/bin/python3 /home/pi/microtonOS/src/wrappers/pianoteq.py
Restart=always
RestartSec=2s
TimeoutSec=infinity

[Install]
WantedBy=graphical.target
